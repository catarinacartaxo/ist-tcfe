	$(foreach i, $(NGSTABS), sed -n '/^$i_TAB/,/^$i_END/{p;/^$i_END/q}' $< | grep -v $i_TAB | grep -v $i_END | grep -v '#' | sed 's/\=/\&/g' | sed 's/$$/\\\\ \\hline/g' > $i_tab.tex;)

ngspice-1.log: ../sim/alinea1.net
	ngspice -b $< -o $@

ngspice-2.log: ../sim/alinea2.net
	ngspice -b $< -o $@

ngspice-3.log: ../sim/alinea3.net
	ngspice -b $< -o $@

ngspice-4.log: ../sim/alinea45.net
	ngspice -b $< -o $@


clean:
	@rm -f ngspice-1.log ngspice-2.log ngspice-3.log ngspice-4.log *.tex *.pdf *.ps *.txt *~

.PHONY: all clean
